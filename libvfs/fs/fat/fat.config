%config end

%config CONFIG_DRIVER_FS_FAT16
  parent CONFIG_DRIVER_FS_FAT
  depend CONFIG_DRIVER_FS_FAT
  desc FAT16 support
%config end

%config CONFIG_DRIVER_FS_FAT32
  parent CONFIG_DRIVER_FS_FAT
