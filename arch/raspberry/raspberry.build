
%section raspberry
  %types architecture

  CONFIG_ARCH_RASPBERRY
  CONFIG_CPU_MAXCOUNT 1

  CONFIG_CPU_RESET_HANDLER
  CONFIG_DEVICE

  # Memory layout

  CONFIG_MUTEK_PRINTK_KEEP_EARLY
  CONFIG_RASPBERRY_EARLY_CONSOLE_UART

  CONFIG_RAM_ADDR 0x00300000
  CONFIG_RAM_SIZE 0x08000000
  CONFIG_ROM_ADDR 0x00200000
  CONFIG_ROM_SIZE 0x00100000

  CONFIG_CPU_ARM_7TDMI
  %set BUILD_NAME raspberry-arm

