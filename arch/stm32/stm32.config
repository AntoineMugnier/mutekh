
%config CONFIG_ARCH_STM32
  desc STMicroelectronics STM32 platform support
  module arch Hexo
  parent CONFIG_ARCH_META
  provide CONFIG_ARCH_NAME=stm32
  exclude CONFIG_ARCH_SMP CONFIG_ARCH_CLUSTER
%config end

%init INIT_STM32_MEM_ALLOC
  parent CONFIG_ARCH_STM32
  during INIT_MUTEK_MEMALLOC
  function stm32_mem_init
%init end

%config CONFIG_STM32_PRINTK_UART
  desc STM32 early console output uses an UART device
  parent CONFIG_ARCH_STM32
  provide CONFIG_MUTEK_PRINTK_HANDLER
%config end

%config CONFIG_BOARD_STM32
  desc STM32 board definition
  parent CONFIG_ARCH_STM32
  flags internal
  when CONFIG_BOARD_STM32_F401RE
  single CONFIG_BOARD_STM32_F401RE
%config end

%config CONFIG_BOARD_STM32_F401RE
  desc STM32 BOARD STM32F401RE
  parent CONFIG_BOARD_STM32
%config end

%config CONFIG_DEVICE_HELPER_PREFIX
  desc Device helper prefix
  parent CONFIG_DEVICE
  flags value
%config end

%init INIT_STM32_PRINTK_UART
  parent CONFIG_STM32_PRINTK_UART
  during INIT_MUTEK_PRINTK
  function stm32_early_console_init
%init end

%init INIT_STM32_FREQ_SCALING
  parent CONFIG_ARCH_STM32
  during INIT_BOOTSTRAP
  after INIT_MEMORY_SECTIONS
  before INIT_STM32_PRINTK_UART
  function stm32_freq_scaling_init
%init end

