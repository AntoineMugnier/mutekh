
%module Hexo

%config CONFIG_SMP
desc Support multi-processors systems
default undefined
suggest CONFIG_CPU_MAXCOUNT>1
%config end

%config CONFIG_CLUSTER
desc Support multi-clusters systems
default undefined
depend CONFIG_SMP
%config end

######################################################################

%config CONFIG_ARCH_META
desc	meta configuration token used to impose requirements
default defined
flags	mandatory noexport nodefine
require	CONFIG_ARCH_NAME
require CONFIG_ARCH_HW_INIT_META
single	CONFIG_ARCH_IBMPC CONFIG_ARCH_SOCLIB CONFIG_ARCH_EMU
%config end

# Makefile variable

%config CONFIG_ARCH_NAME
desc	Platform name configuration token
flags	nodefine
%config end

%config CONFIG_RAM_ADDR
desc RAM memory base address on this platform
%config end

%config CONFIG_RAM_SIZE
desc RAM memory size in bytes on this platform
%config end

%config CONFIG_ROM_ADDR
desc ROM memory base address on this platform
%config end

%config CONFIG_ROM_SIZE
desc ROM memory size in bytes on this platform
%config end

%config CONFIG_DATA_FROM_ROM
desc Whether we have to copy .data from Rom/Flash before init
default undefined
%config end

%config CONFIG_ARCH_HW_INIT_META
desc	Meta configuration token used to impose hardware initialization requirements
default defined
flags	mandatory noexport nodefine
single	CONFIG_ARCH_DEVICE_TREE CONFIG_ARCH_HW_INIT CONFIG_ARCH_HW_INIT_USER
require CONFIG_ARCH_DEVICE_TREE CONFIG_ARCH_HW_INIT CONFIG_ARCH_HW_INIT_USER
%config end

%config CONFIG_ARCH_DEVICE_TREE
desc Whether we have a Flattened Device Tree definition
default undefined
provide CONFIG_DRIVER_ENUM_FDT
provide CONFIG_HEXO_DEVICE_TREE
%config end

%config CONFIG_ARCH_HW_INIT
desc Whether arch provides a arch_hw_init() function
default undefined
%config end

%config CONFIG_ARCH_HW_INIT_USER
desc Whether user provides a user_hw_init() function
default undefined
%config end
