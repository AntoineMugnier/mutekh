
%config CONFIG_ARCH_EFM32
  desc Silabs EFM32 platform support
  module arch Hexo
  parent CONFIG_ARCH_META
  provide CONFIG_ARCH_NAME=efm32
  single CONFIG_EFM32_ZERO_GECKO CONFIG_EFM32_LEOPARD_GECKO CONFIG_EFM32_WONDER_GECKO
%config end

%init INIT_EFM32_MEM_ALLOC
  parent CONFIG_ARCH_EFM32
  during INIT_MUTEK_MEMALLOC
  function efm32_mem_init
%init end

%config CONFIG_EFM32_ZERO_GECKO
  desc Support for EFM32 Zero Gecko family of microcontrollers
  parent CONFIG_ARCH_EFM32
  depend CONFIG_CPU_ARM_CORTEXM0
%config end

%config CONFIG_EFM32_LEOPARD_GECKO
  desc Support for EFM32 Leopard Gecko family of microcontrollers
  parent CONFIG_ARCH_EFM32
  depend CONFIG_CPU_ARM_CORTEXM3
%config end

%config CONFIG_EFM32_WONDER_GECKO
  desc Support for EFM32 Wonder Gecko family of microcontrollers
  parent CONFIG_ARCH_EFM32
  depend CONFIG_CPU_ARM_CORTEXM4
%config end

%config CONFIG_EFM32_EARLY_CONSOLE_LEUART_ADDR
  desc Address of the EFM32 UART used for early console output
  parent CONFIG_ARCH_EFM32
  default 0x40084000
  flags value
%config end

%config CONFIG_EFM32_STK3200
  desc Efm32 support for STK3200 zero gecko starter kit
  parent CONFIG_ARCH_EFM32
  provide CONFIG_MUTEK_EARLY_CONSOLE
  require CONFIG_EFM32_EARLY_CONSOLE_LEUART_ADDR
  depend CONFIG_EFM32_ZERO_GECKO
%config end

%init INIT_EFM32_EARLY_CONSOLE_LEUART_STK3200
  parent CONFIG_EFM32_STK3200
  during INIT_MUTEK_EARLY_CONSOLE
  function efm32_early_console_leuart_init
%init end

%config CONFIG_EFM32_STK3600
  desc Efm32 support for STK3600 leopard gecko starter kit
  parent CONFIG_ARCH_EFM32
  provide CONFIG_MUTEK_EARLY_CONSOLE
  require CONFIG_EFM32_EARLY_CONSOLE_LEUART_ADDR
  depend CONFIG_EFM32_LEOPARD_GECKO
%config end

%init INIT_EFM32_EARLY_CONSOLE_LEUART_STK3600
  parent CONFIG_EFM32_STK3600
  during INIT_MUTEK_EARLY_CONSOLE
  function efm32_early_console_leuart_init
%init end

%config CONFIG_EFM32_STK3800
  desc Efm32 support for STK3800 Wonder gecko starter kit
  parent CONFIG_ARCH_EFM32
  provide CONFIG_MUTEK_EARLY_CONSOLE
  require CONFIG_EFM32_EARLY_CONSOLE_LEUART_ADDR
  depend CONFIG_EFM32_WONDER_GECKO
%config end

%init INIT_EFM32_EARLY_CONSOLE_LEUART_STK3800
  parent CONFIG_EFM32_STK3800
  during INIT_MUTEK_EARLY_CONSOLE
  function efm32_early_console_leuart_init
%init end

