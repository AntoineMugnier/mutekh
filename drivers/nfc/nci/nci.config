%config CONFIG_DRIVER_NFC_NCI
  desc Enable NCI (NFC Controller Interface) driver support
  parent CONFIG_DRIVER
  flags auto
  depend CONFIG_DEVICE_NFC
  depend CONFIG_DEVICE_IRQ
  single CONFIG_DRIVER_NFC_NCI_I2C
   # CONFIG_DRIVER_NFC_NCI_SPI
%config end

%config CONFIG_DRIVER_NFC_NCI_I2C
  desc Enable NCI I2C transport
  parent CONFIG_DRIVER_NFC_NCI
  depend CONFIG_DEVICE_I2C
  depend CONFIG_DEVICE_I2C_BYTECODE
  depend CONFIG_DEVICE_I2C_BYTECODE_TIMER
  depend CONFIG_DEVICE_I2C_BYTECODE_GPIO
%config end

