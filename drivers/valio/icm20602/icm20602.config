%config CONFIG_DRIVER_ICM20602
  parent CONFIG_DRIVER
  desc Enable ICM20602 motion sensor Valio driver
  flags auto
  depend CONFIG_DEVICE_VALIO_MOTION_SENSOR
  depend CONFIG_MUTEK_KROUTINE_SCHED
  depend CONFIG_DEVICE_GPIO
  single CONFIG_DRIVER_ICM20602_I2C CONFIG_DRIVER_ICM20602_SPI
  depend CONFIG_DEVICE_SLEEP
%config end

%config CONFIG_DRIVER_ICM20602_POWERGATE
  desc Enable ICM20602 power gating
  parent CONFIG_DRIVER_ICM20602
  depend CONFIG_DEVICE_CLOCK_GATING
%config end

%config CONFIG_DRIVER_ICM20602_I2C
  desc Enable ICM20602 I2C transport
  parent CONFIG_DRIVER_ICM20602
  depend CONFIG_DEVICE_I2C
  depend CONFIG_DEVICE_I2C_BYTECODE
  depend CONFIG_DEVICE_I2C_BYTECODE_TIMER
%config end

%config CONFIG_DRIVER_ICM20602_SPI
  desc Enable ICM20602 SPI transport
  parent CONFIG_DRIVER_ICM20602
  depend CONFIG_DEVICE_SPI
  depend CONFIG_DEVICE_SPI_BYTECODE
  depend CONFIG_DEVICE_SPI_BYTECODE_TIMER
%config end
