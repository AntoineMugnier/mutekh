
  %set OUTPUT_NAME si446x

  # New source code module to be compiled
  %append MODULES $(OUTPUT_NAME):$(CONFIGPATH)

  # Application license
  CONFIG_LICENSE_APP_LGPL

  # Libs
  CONFIG_MUTEK_CONSOLE
  CONFIG_MUTEK_CONTEXT_SCHED
  CONFIG_MUTEK_SHELL

  %include scripts/options.build
  %include arch/arch.build

  CONFIG_DRIVER_RFPACKET_SI446X!

%section t_rev20
  CONFIG_DRIVER_RFPACKET_SI446X_CHIPREV 0x20
%else
  CONFIG_DRIVER_RFPACKET_SI446X_CHIPREV 0x10

%section t_cca
  CONFIG_DRIVER_RFPACKET_SI446X_CCA!
%else
  CONFIG_DRIVER_RFPACKET_SI446X_CCA! undefined

%section t_short
  CONFIG_DRIVER_RFPACKET_SI446X_MAX_PKT_SIZE! 56
%else
  CONFIG_DRIVER_RFPACKET_SI446X_MAX_PKT_SIZE! 128

%section t_ook
  CONFIG_DRIVER_RFPACKET_SI446X_MOD_OOK!
%else
  CONFIG_DRIVER_RFPACKET_SI446X_MOD_OOK! undefined

%section t_raw
  CONFIG_DRIVER_RFPACKET_SI446X_MOD_RAW!
%else
  CONFIG_DRIVER_RFPACKET_SI446X_MOD_RAW! undefined

%section t_2fsk
  CONFIG_DRIVER_RFPACKET_SI446X_MOD_2FSK!
%else
  CONFIG_DRIVER_RFPACKET_SI446X_MOD_2FSK! undefined

%section t_4fsk
  CONFIG_DRIVER_RFPACKET_SI446X_MOD_4FSK!
%else
  CONFIG_DRIVER_RFPACKET_SI446X_MOD_4FSK! undefined

%section t_sleep
