
%config CONFIG_NETWORK
desc Enable network support
default undefined
depend CONFIG_MUTEK_TIMERMS
%config end

%config CONFIG_NETWORK_AUTOALIGN
desc Force packet buffer alignment
default undefined
%config end

%config CONFIG_NETWORK_PROFILING
desc Provide profiling information about network layer
default undefined
%config end

%config CONFIG_NETWORK_IPV4
desc Enable IP version 4 support
default defined
%config end

%config CONFIG_NETWORK_ROUTING
desc Enable packet routing support
default undefined
%config end

%config CONFIG_NETWORK_FILTER
desc Enable packet filtering support
default undefined
%config end

%config CONFIG_NETWORK_RARP
desc Enable RARP builtin client for address attribution
default undefined
depend CONFIG_NETWORK_IPV4
depend CONFIG_NETWORK_SOCKET_RAW
%config end

%config CONFIG_NETWORK_UDP
desc Enable UDP transport support
default undefined
depend CONFIG_NETWORK_IPV4
%config end

%config CONFIG_NETWORK_TCP
desc Enable TCP transport support
default undefined
depend CONFIG_NETWORK_IPV4
%config end

%config CONFIG_NETWORK_NFS
desc Enable NFS builtin client for network filesystem
default undefined
depend CONFIG_NETWORK_UDP
%config end

%config CONFIG_NETWORK_SOCKET
desc Enable libsocket API support
default undefined
require	CONFIG_NETWORK_SOCKET_HEXO CONFIG_NETWORK_SOCKET_POSIX
%config end

%config CONFIG_NETWORK_SOCKET_HEXO
desc Use HEXO socket interface (without integer file descriptors)
default undefined
exclude CONFIG_NETWORK_SOCKET_POSIX
%config end

%config CONFIG_NETWORK_SOCKET_POSIX
desc Use POSIX socket interface (with integer file descriptors)
default undefined
exclude CONFIG_NETWORK_SOCKET_HEXO
%config end

%config CONFIG_NETWORK_SOCKET_RAW
desc Enable support for raw sockets (PF_PACKET and SOCK_RAW)
default undefined
%config end
